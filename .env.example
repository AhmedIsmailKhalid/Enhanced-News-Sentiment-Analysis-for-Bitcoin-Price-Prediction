# =============================================================================
# Bitcoin Sentiment MLOps - Environment Configuration Template
# =============================================================================
# Copy this file to .env.dev for local development
# Never commit actual .env files to Git
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Local PostgreSQL (Docker - Development)
DATABASE_URL=postgresql://bitcoin_user:bitcoin_password@localhost:5432/bitcoin_sentiment_dev

# NeonDB Production Branch (Live System)
NEONDB_PRODUCTION_URL=postgresql://[username]:[password]@[host]/[database]

# NeonDB Backup Branch (Safety Net)
NEONDB_BACKUP_URL=postgresql://[username]:[password]@[host]/[database]

# Active database (switch between local/production/backup)
ACTIVE_DATABASE=local
# Options: local | production | backup

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# Cache settings
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_TTL_SENTIMENT=604800
CACHE_TTL_FEATURES=7200
CACHE_TTL_API_RESPONSE=900
CACHE_TTL_MODEL_METADATA=86400

# -----------------------------------------------------------------------------
# External API Configuration
# -----------------------------------------------------------------------------

# CoinGecko API (Primary Price Data Source)
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=
# Note: Free tier doesn't require API key

# CryptoCompare API (Backup Price Data Source)
CRYPTOCOMPARE_API_URL=https://min-api.cryptocompare.com/data
CRYPTOCOMPARE_API_KEY=

# Reddit API (Social Media Data)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=your_reddit_user_agent

# -----------------------------------------------------------------------------
# News Sources Configuration
# -----------------------------------------------------------------------------

COINDESK_RSS_URL=https://www.coindesk.com/arc/outboundfeeds/rss/
COINTELEGRAPH_RSS_URL=https://cointelegraph.com/rss
DECRYPT_RSS_URL=https://decrypt.co/feed

# Web scraping settings
SCRAPING_DELAY_SECONDS=3
REQUEST_TIMEOUT_SECONDS=10
MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

ENVIRONMENT=development
# Options: development | production

DEBUG=true
LOG_LEVEL=DEBUG
# Options: DEBUG | INFO | WARNING | ERROR | CRITICAL

# Application settings
APP_NAME=Bitcoin Sentiment MLOps
APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Data Collection Configuration
# -----------------------------------------------------------------------------

COLLECTION_INTERVAL_MINUTES=15
HISTORICAL_DATA_MONTHS=6
MAX_ARTICLES_PER_SOURCE=10
MAX_REDDIT_POSTS=50

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------

MODEL_REGISTRY_PATH=models/saved_models
MODEL_EXPERIMENTS_PATH=models/experiments

# Model serving
MODEL_SERVING_HOST=0.0.0.0
MODEL_SERVING_PORT=8000
MODEL_API_TIMEOUT_SECONDS=30

# -----------------------------------------------------------------------------
# MLOps Configuration
# -----------------------------------------------------------------------------

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090

# Drift detection thresholds
DRIFT_DETECTION_THRESHOLD=0.05
ACCURACY_DEGRADATION_THRESHOLD=0.10

# Automated retraining
AUTO_RETRAIN_ENABLED=true
RETRAIN_SCHEDULE=weekly
MIN_TRAINING_SAMPLES=1000

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# API Security
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

LOG_FILE_PATH=logs/application.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------

TEST_DATABASE_URL=postgresql://bitcoin_user:bitcoin_password@localhost:5432/bitcoin_sentiment_test
TEST_MODE=false